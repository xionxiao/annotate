{
  "name": "annotate",
  "displayName": "annotate",
  "description": "annotate code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:annotate.addAnnotation",
    "onCommand:annotate.openAnnotation",
    "onCommand:annotate.setAnnotationDir",
    "onWebviewPanel:AnnoPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "annotate.setAnnotationDir",
        "category": "annotate",
        "title": "Set Annotation Directory"
      },
      {
        "command": "annotate.openAnnotation",
        "category": "annotate",
        "title": "Open Annotation"
      },
      {
        "command": "annotate.addAnnotation",
        "category": "annotate",
        "title": "Add Annotation"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "annotate.addAnnotation",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "mocha": "^8.4.0"
  }
}
